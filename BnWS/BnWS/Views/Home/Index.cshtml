@using BnWS.Entity
@using BnWS.Extention
@{
    ViewBag.Title = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="renderer" content="webkit">
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <title>自嘲吧后台</title>

    <meta name="keywords" content="">
    <meta name="description" content="">

    <!--[if lt IE 9]>
        <meta http-equiv="refresh" content="0;ie.html" />
    <![endif]-->

    <link rel="shortcut icon" href="favicon.ico">
    @Styles.Render("~/Content/css/bootstrap.min14ed.css?v=3.3.6")
    @Styles.Render("~/Content/css/font-awesome.min93e3.css?v=4.4.0")
    @Styles.Render("~/Content/css/animate.min.css")
    @Styles.Render("~/Content/css/style.min862f.css?v=4.1.0")
</head>

<body class="fixed-sidebar full-height-layout gray-bg skin-1" style="overflow:hidden">
    <div id="wrapper">
        <!--左侧导航开始-->
        <nav class="navbar-default navbar-static-side" role="navigation">
            <div class="nav-close">
                <i class="fa fa-times-circle"></i>
            </div>
            <div class="sidebar-collapse">
                <ul class="nav" id="side-menu">
                    <li class="nav-header">
                        <div class="dropdown profile-element">
                            <span><img alt="image" class="img-circle" src="~/Content/img/profile_small.jpg" /></span>
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear">
                                    <span class="block m-t-xs"><strong class="font-bold">@ViewBag.User</strong></span>
                                    <span class="text-muted text-xs block">@ViewBag.Role<b class="caret"></b></span>
                                </span>
                            </a>
                            <ul class="dropdown-menu animated fadeInRight m-t-xs">
                                <li>
                                    <a class="J_menuItem" href="@Url.Action("ChangePassword", "Account")">修改密码</a>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <a href="@Url.Action("LogOut", "Account")">安全退出</a>
                                </li>
                            </ul>
                        </div>
                        <div class="logo-element">
                            ZY
                        </div>
                    </li>
                    @Html.BuildMenu(ViewBag.Menus as List<T_S_Function>)
                </ul>
            </div>
        </nav>
        <!--左侧导航结束-->
        <!--右侧部分开始-->
        <div id="page-wrapper" class="gray-bg dashbard-1">
            <div class="row border-bottom">
                <nav class="navbar navbar-static-top" style="display: none" role="navigation" style="margin-bottom: 0">
                    <div class="navbar-header">
                        <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i> </a>

                        <form role="search" class="navbar-form-custom" method="post" action="/ZzManage/quickSearch">
                            <div class="form-group">
                                <input type="text" placeholder="请输入您需要查找的内容 …" class="form-control" name="top-search" id="top-search">
                            </div>
                        </form>
                    </div>
                    
                </nav>
            </div>
            <div class="row content-tabs">
                <button class="roll-nav roll-left J_tabLeft">
                    <i class="fa fa-backward"></i>
                </button>
                <nav class="page-tabs J_menuTabs">
                    <div class="page-tabs-content">
                        <a href="javascript:;" class="active J_menuTab" data-id="index_v1.html">首页</a>
                    </div>
                </nav>
                <button class="roll-nav roll-right J_tabRight">
                    <i class="fa fa-forward"></i>
                </button>
                <div class="btn-group roll-nav roll-right">
                    <button class="dropdown J_tabClose" data-toggle="dropdown">
                        关闭操作<span class="caret"></span>

                    </button>
                    <ul role="menu" class="dropdown-menu dropdown-menu-right">
                        <li class="J_tabShowActive">
                            <a>定位当前选项卡</a>
                        </li>
                        @*<li class="divider"></li>*@
                        <li class="J_tabCloseAll">
                            <a>关闭全部选项卡</a>
                        </li>
                        <li class="J_tabCloseOther">
                            <a>关闭其他选项卡</a>
                        </li>
                    </ul>
                </div>
                <a href="~/Account/LogOut" class="roll-nav roll-right J_tabExit"><i class="fa fa fa-sign-out"></i> 退出</a>
            </div>
            <div class="row J_mainContent" id="content-main" style="height: calc(100% - 81px)">
                <iframe class="J_iframe" name="iframe0" width="100%" height="100%" src="~/Home/Dashboard" frameborder="0" data-id="index_v1.html" seamless></iframe>
            </div>
            <div class="footer">
                <div class="pull-right">
                    &copy; @DateTime.Now.Year  bn
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/Content/js/jquery.min.js?v=2.1.4")
    @Scripts.Render("~/Content/js/bootstrap.min.js?v=3.3.6")
    @Scripts.Render("~/Content/js/plugins/metisMenu/jquery.metisMenu.js")
    @Scripts.Render("~/Content/js/plugins/slimscroll/jquery.slimscroll.min.js")
    @Scripts.Render("~/Content/js/plugins/layer/layer.min.js")
    @Scripts.Render("~/Content/js/hplus.min.js?v=4.1.0")
    @Scripts.Render("~/Content/js/contabs.min.js")
    @*@Scripts.Render("~/Content/js/plugins/pace/pace.min.js")*@
</body>
</html>