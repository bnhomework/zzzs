@model BnWS.Entity.ZZOrderDetail
@{
    ViewBag.Title = "待发货";
    Layout = "~/Views/Shared/_Manage.cshtml";
}

<!DOCTYPE html>

<div class="row">
    <div class="col-sm-9">
        <div class="wrapper wrapper-content animated fadeInUp">
            <div class="ibox">
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="m-b-md">
                                <h2>订单编号：@Model.TrackingNumber</h2>
                            </div>
                            <dl class="dl-horizontal">
                                <dt>状态：</dt>
                                <dd>
                                    <span class="label label-primary">@Model.OrderStatusDesc</span>
                                </dd>
                            </dl>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            <dl class="dl-horizontal">

                                <dt>客户：</dt>
                                <dd>@Model.CustomerName</dd>
                                <dt>下单时间：</dt>
                                <dd>@Model.CheckOutDate</dd>
                                <dt>颜色：</dt>
                                <dd>@Model.Color</dd>
                                <dt>数量：</dt>
                                <dd>
                                    @Model.Quiantity
                                </dd>
                                <dt>总金额：</dt>
                                <dd>@Model.TotalAmount</dd>
                            </dl>
                        </div>
                        <div class="col-sm-7" id="cluster_info">
                            <dl class="dl-horizontal">
                                <dt>作品：</dt>
                                <dd>@Model.DesginName</dd>
                                <dt>设计师：</dt>
                                <dd>@Model.Desginer</dd>
                            </dl>
                        </div>
                    </div>
                    <div class="row" style="display: none">
                        <div class="col-sm-12">
                            <dl class="dl-horizontal">
                                <dt>当前进度：</dt>
                                <dd>
                                    <div class="progress progress-striped active m-b-sm">
                                        <div style="width: 60%;" class="progress-bar"></div>
                                    </div>
                                    <small>当前已完成项目总进度的 <strong>60%</strong></small>
                                </dd>
                            </dl>
                        </div>
                    </div>
                    <div class="row m-t-sm">
                        <div class="col-sm-12">
                            <div class="panel blank-panel">
                                <div class="panel-heading">
                                    <div class="panel-options">
                                        <ul class="nav nav-tabs">
                                            <li class="active">
                                                <a href="#tab-2" data-toggle="tab">客户素材</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="panel-body">
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="tab-2">
                                            <div class="photos">
                                                @if (!string.IsNullOrEmpty(Model.CustomerImg1))
                                                {
                                                    <a target="_blank" href="@Model.CustomerImg1">
                                                        <img alt="image" class="feed-photo" src="@Model.CustomerImg1">
                                                    </a>

                                                }
                                                @if (!string.IsNullOrEmpty(Model.CustomerImg2))
                                                {
                                                    <a target="_blank" href="@Model.CustomerImg2">
                                                        <img alt="image" class="feed-photo" src="@Model.CustomerImg2">
                                                    </a>

                                                }
                                            </div>


                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="row m-t-sm">
                        <div class="col-sm-12">
                            <div class="panel blank-panel">
                                <div class="panel-heading">
                                    <div class="panel-options">
                                        <ul class="nav nav-tabs">
                                            <li class="active">
                                                <a href="#tab-1" data-toggle="tab">收货地址</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="panel-body">
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="tab-1">
                                            <div><strong>收件人：</strong>@(Model.ContactName)</div>
                                            <div>
                                                <strong>
                                                    联系电话：
                                                </strong>@(Model.Phone)
                                            </div>
                                            <div>
                                                <strong>地址：</strong> @(Model.AddressLine1)
                                            </div>
                                            <div>
                                                @(string.Format("{0} {1} {2}", Model.Town, Model.City, Model.Province))
                                            </div>


                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3">
        <div class="wrapper wrapper-content project-manager">
            <h4>产品效果图</h4>


            @*<h5>正面效果图</h5>*@
            <p class="small font-bold">
                <span><i class="fa fa-circle text-warning"></i> 正面效果图</span>
            </p>
            <a target="_blank" href="@Model.Preview1">
                <img src="@Model.Preview1" class="img-responsive">
            </a>
            @*<h5>被面效果图</h5>*@

            <p class="small font-bold">
                <span><i class="fa fa-circle text-warning"></i> 背面效果图</span>
            </p>
            <a target="_blank" href="@Model.Preview2">
                <img src="@Model.Preview2" class="img-responsive">
            </a>
        </div>
    </div>
</div>
